{
  "name": "dynamodb-serverless",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serverless": "serverless",
    "dev": "AWS_ACCESS_KEY_ID=dev AWS_SECRET_ACCESS_KEY=dev serverless offline start --nos3sync --stage dev",
    "build:frontend": "VITE_LAMBDA_ENDPOINT=$LAMBDA_ENDPOINT vite build --emptyOutDir --outDir ../../.build/frontend/ ./src/frontend/",
    "deploy:staging": "serverless deploy --verbose --stage stg",
    "deploy:production": "serverless deploy --verbose --stage prod"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.18.0",
    "@aws-sdk/util-dynamodb": "^3.18.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-dynamodb": "^0.2.53",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^13.5.0",
    "serverless-plugin-scripts": "^1.0.2",
    "serverless-prune-plugin": "^2.0.2",
    "serverless-s3-sync": "^3.3.0",
    "vite": "^5.2.11"
  }
}
